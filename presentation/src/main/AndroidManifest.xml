<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zireck.projectk" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".presentation.AndroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".presentation.view.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.ActionBar.WithDrawer"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".presentation.view.activity.FoodDetailActivity" android:label="Food Detail" android:theme="@style/AppTheme.ActionBar" android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity android:name=".presentation.view.activity.AddFoodActivity" android:label="Add Food" android:theme="@style/AppTheme.ActionBar" android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity android:name=".presentation.view.activity.EditFoodActivity" android:label="Edit Food" android:theme="@style/AppTheme.ActionBar" android:configChanges="keyboardHidden|orientation|screenSize" />

        <activity android:name=".presentation.view.activity.AddMealActivity" android:label="Add Meal" android:theme="@style/AppTheme.ActionBar" android:configChanges="keyboardHidden|orientation|screenSize" />
    </application>

</manifest>
