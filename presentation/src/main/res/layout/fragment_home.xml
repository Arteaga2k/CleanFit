<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_meals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="See Meals"/>

        <LinearLayout
            android:id="@+id/layout_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FitChart:"
            android:layout_margin="24dp"/>

        <com.txusballesteros.widgets.FitChart
            android:id="@+id/fit_chart"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            app:strokeSize="16dp"
            app:valueStrokeColor="#ff0000"
            app:backStrokeColor="#00ff00"
            app:animationMode="overdraw" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WheelIndicatorView:"
            android:layout_margin="24dp"/>

        <com.dlazaro66.wheelindicatorview.WheelIndicatorView
            android:id="@+id/wheel_indicator_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            app:itemsLineWidth="8dp"
            app:backgroundColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Days:"/>

    </LinearLayout>

</ScrollView>