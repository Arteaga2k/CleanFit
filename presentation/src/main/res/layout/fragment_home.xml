<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FitChart:"
        android:layout_margin="24dp"/>

    <com.txusballesteros.widgets.FitChart
        android:id="@+id/fit_chart"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        app:strokeSize="16dp"
        app:valueStrokeColor="#ff0000"
        app:backStrokeColor="#00ff00"
        app:animationMode="overdraw" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WheelIndicatorView:"
        android:layout_margin="24dp"/>

    <com.dlazaro66.wheelindicatorview.WheelIndicatorView
        android:id="@+id/wheel_indicator_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        app:itemsLineWidth="8dp"
        app:backgroundColor="@color/white" />

</LinearLayout>