<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/food_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/food_picture"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:border_width="1dp"
        app:border_color="@color/black"/>

    <TextView
        android:id="@+id/food_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/separator"
        android:layout_toEndOf="@+id/food_picture"
        android:layout_toRightOf="@+id/food_picture"
        android:layout_marginBottom="4dp"
        android:text="Food Name"
        android:textSize="18sp"
        android:textColor="@color/black"/>

    <View
        android:visibility="invisible"
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="@color/primary" />

    <ImageView
        android:id="@+id/icon_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator"
        android:layout_toEndOf="@+id/food_picture"
        android:layout_toRightOf="@+id/food_picture"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_tag_grey600_18dp"/>

    <TextView
        android:id="@+id/food_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator"
        android:layout_toEndOf="@+id/icon_brand"
        android:layout_toRightOf="@+id/icon_brand"
        android:text="Brand"
        android:textColor="@color/black"/>
</RelativeLayout>